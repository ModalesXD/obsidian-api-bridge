{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2021"
		],
		"paths": {
			"@/*": ["src/*"],
			"@/services/*": ["src/services/*"],
			"@/core/*": ["src/core/*"],
			"@/ui/*": ["src/ui/*"],
			"@/types/*": ["src/types/*"],
			"@/utils/*": ["src/utils/*"],
			"@/constants/*": ["src/constants/*"]
		}
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
